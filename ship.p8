pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
 ship = {
  sprite = 1,
  x = 64, 
  y = 100,
 }
end

function _draw()
 cls(0)
 spr(ship.sprite, ship.x, ship.y)
end

function _update()
	ship_nomove()
 ship_action()
end

function ship_nomove()
 if ship.sprite==1 then
  ship.sprite = 2
 else
  ship.sprite = 1
 end
end

function ship_action()
 if btn(⬆️) then
   ship_fwd()
 end
 if btn(⬇️) then
  ship_back()
 end
 if btn(⬅️) then
  ship_left()
 end
 if btn(➡️) then
  ship_right()
 end
end

function ship_back()
 ship.y += 1
end

function ship_fwd()
 ship.y -= 1
end

function ship_left()
 ship.sprite = 4
 ship.x -= 1
end

function ship_right()
 ship.sprite = 3
 ship.x += 1
end
