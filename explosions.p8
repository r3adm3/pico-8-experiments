function _init()
 exps={}
 clrs={5,9,10,7}
end


function _update()
 for p in all(exps) do
  p.x+=p.spdx
  p.y+=p.spdy
  p.scale-=.1
  p.l-=.1
  p.c=flr(p.l)
  if p.l<=0 then del(exps,p) end
 end

 if btnp(âŽ) then
  xp=64
  yp=64
  for i=0,20 do
   add(exps,{
    x=xp,
    y=xp,
    spdx=1-rnd(2),
    spdy=1-rnd(2),
    scale=2+rnd(5),
    l=5
   })
  end
  
 end

end


function _draw()
 cls()
 for p in all(exps) do
  circfill(p.x,p.y,p.scale,clrs[p.c])
 end
end
